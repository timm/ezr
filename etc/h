#!/usr/bin/env bash
# vim : set syntax=sh :
export BASH_SILENCE_DEPRECATION_WARNING=1

alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias gp="git add * ; git commit -am saving; git push; git status";
alias grep='grep --color=auto'
alias ls="ls -G"

,() { 
  f=$1.py; shift; python3 $f $*; 
}

,h() {
	NO='\033[0m'
	RED='\033[0;31m'
	GREEN='\033[0;32m'
	ORANGE='\033[0;33m'
	BLUE='\033[0;34m'
	PURPLE='\033[0;35m'
	CYAN='\033[0;36m'
	LIGHTGRAY='\033[0;37m'
	DARKGRAY='\033[1;30m'
	LIGHTRED='\033[1;31m'
	LIGHTGREEN='\033[1;32m'
	YELLOW='\033[1;33m'
	LIGHTBLUE='\033[1;34m'
	LIGHTPURPLE='\033[1;35m'
	LIGHTCYAN='\033[1;36m'
	WHITE='\033[1;37m'
	clear
	echo -e "$NO$LIGHTCYAN"
	cat <<'EOF'
 .-.
(o o)    there is no escape...
| O \    ... from (s)hell !!!
 \   \
  `~~~'
EOF
	echo -e "$NO$LIGHTRED"
	echo "Short cuts:"; echo ""
	alias | sed 's/alias /  /'
  echo -e "$NO"
}

here()    { cd $1; basename `pwd`; }
PROMPT_COMMAND='echo -ne "ðŸ“ $(git branch 2>/dev/null | grep '^*' | colrm 1 2):";PS1="$(here ..)/$(here .):\!\e[m â–¶ "'

if    [ -z "$H" ] 
then 
     H=`git rev-parse --show-toplevel`
     ,h
     H="$H" bash  --init-file $H/etc/h -i
fi
